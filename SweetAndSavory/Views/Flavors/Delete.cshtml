@{
    Layout = "_Layout";
}

@model SweetAndSavory.Models.Flavor
<div class="container">
    <h1>Delete Flavor</h1>
</div>
<hr />
<div class="center">
<h2>Are you sure you want to delete @Html.DisplayFor(model => model.FlavorName)? This action cannot be undone.</h2>
</div>

@using (Html.BeginForm())
{ 
    <div class="center">
        <input type="submit" value="Delete" class="button" />
    </div>
}
<div class="link-container">
    <p>@Html.ActionLink("Back to all flavors", "Index")</p>
</div>