@{
    Layout = "_Layout";
}

@using SweetAndSavory.Models;
@using Microsoft.AspNetCore.Identity;

<div class="container">
    <h1>Treats</h1>
</div>
<hr />
@if (@Model.Count == 0)
{
    <p>No treats yet added</p>
}
<div class="container">
    <ul>
        @foreach (Treat treat in Model)
        {
            <li>
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink($"Name: {treat.TreatName}", "Details", new { id = treat.TreatId })
                }
                else
                {
                    @treat.TreatName
                }
            </li>
        }
    </ul>
</div>
