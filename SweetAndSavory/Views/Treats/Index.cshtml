@{
    Layout = "_Layout";
}

@using SweetAndSavory.Models;

<div class="container">
    <h1>Treats</h1>
</div>

@if (@Model.Count == 0)
{
    <p>No treats yet added</p>
}
<div class="container">
    <ul>
        @foreach (Treat treat in Model)
        {
            <li>@Html.ActionLink($"Name: {treat.TreatName}", "Details", new { id = treat.TreatId })</li>
        }
    </ul>
</div>
<div class="link-container">
    <p>@Html.ActionLink("Add new treat", "Create", "Treats")</p>
    <p>@Html.ActionLink("Return home", "Index", "Home")</p>
</div>